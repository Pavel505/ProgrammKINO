<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameField"
            android:hint="Имя"
            android:inputType="text"
            android:text=""
            android:textColor="@color/line_register"
            android:textColorHint="@color/text_bottom"
            android:textSize="20sp"

            app:met_floatingLabel="highlight"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#982360"
            app:met_singleLineEllipsis="true"
            app:met_minCharacters="5"
            app:met_maxCharacters="100"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastnameField"
            android:hint="Фамилия"
            android:inputType="text"
            android:text=""
            android:textColor="@color/line_register"
            android:textColorHint="@color/text_bottom"
            android:textSize="20sp"

            app:met_floatingLabel="highlight"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#982360"
            app:met_singleLineEllipsis="true"
            app:met_minCharacters="5"
            app:met_maxCharacters="100"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loginField"
            android:hint="Логин"
            android:inputType="text"
            android:text=""
            android:textColor="@color/line_register"
            android:textColorHint="@color/text_bottom"
            android:textSize="20sp"

            app:met_floatingLabel="highlight"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#982360"
            app:met_singleLineEllipsis="true"
            app:met_minCharacters="5"
            app:met_maxCharacters="100"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passField"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/line_register"
            android:textColorHint="@color/text_bottom"
            android:textSize="20sp"

            app:met_floatingLabel="highlight"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#982360"
            app:met_singleLineEllipsis="true"
            app:met_minCharacters="5"
            app:met_maxCharacters="100"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailField"
            android:hint="Почта"
            android:inputType="textEmailAddress"
            android:text=""
            android:textColor="@color/line_register"
            android:textColorHint="@color/text_bottom"
            android:textSize="20sp"

            app:met_floatingLabel="highlight"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#982360"
            app:met_singleLineEllipsis="true"
            app:met_minCharacters="5"
            app:met_maxCharacters="100"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dataField"
            android:hint="Дата рождения"
            android:inputType="date"
            android:text=""
            android:textColor="@color/line_register"
            android:textColorHint="@color/text_bottom"
            android:textSize="20sp"

            app:met_floatingLabel="highlight"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#982360"
            app:met_singleLineEllipsis="true"
            app:met_minCharacters="4"
            app:met_maxCharacters="100"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cityField"
            android:hint="Город проживания"
            android:inputType="text"
            android:text=""
            android:textColor="@color/line_register"
            android:textColorHint="@color/text_bottom"
            android:textSize="20sp"

            app:met_floatingLabel="highlight"
            app:met_baseColor="#0056d3"
            app:met_primaryColor="#982360"
            app:met_singleLineEllipsis="true"
            app:met_maxCharacters="100"

            />

        <EditText
            android:id="@+id/userdescriptionField"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="Описание пользователя"
            android:inputType="text"
            android:text=""
            android:textColor="@color/line_register"
            android:textColorHint="@color/text_bottom"
            android:textSize="20sp"

            app:met_baseColor="#0056d3"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="100"
            app:met_minCharacters="5"
            app:met_primaryColor="#982360"
            app:met_singleLineEllipsis="true"

            />

    </LinearLayout>

</androidx.cardview.widget.CardView>