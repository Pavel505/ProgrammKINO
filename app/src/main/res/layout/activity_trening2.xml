<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trening2Activity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_question_zagolovok"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textSize="20sp"
                tools:text="@string/question" />

            <TextView
                android:id="@+id/text_question"
                android:layout_width="match_parent"
                android:layout_height="219dp"
                android:layout_marginTop="5dp"
                android:text="Текст вопроса"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:textSize="20sp"
                tools:text="@string/answer" />

            <TextView
                android:id="@+id/text_answer"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginTop="5dp"
                android:text="Текст  ответа"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textSize="20sp"
                tools:text="@string/comment" />

            <TextView
                android:id="@+id/text_commentQ"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_marginTop="5dp"
                android:text="Текст комментария"
                android:textSize="16sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/answer_znatok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ваш ответ"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>